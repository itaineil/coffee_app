<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This page is to store orders to and retrieve them for the future. Enter your customer id, name and favourite coffee and it will be retrieved. Enter Customer Id Only to view Specific Order"
        android:textColorHint="#993000"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/edtCustomerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22sp"
        android:ems="10"
        android:hint="Enter your Customer Id"
        android:textColorHint="#993000" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your name"
        android:textColorHint="#993000" />

    <EditText
        android:id="@+id/edtFavouriteCoffee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the coffee to order"
        android:textColorHint="#993000" />

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22sp"
        android:text="Add Product" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Stored Products" />

    <Button
        android:id="@+id/btnViewSpecificOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Specific Order" />

</LinearLayout>