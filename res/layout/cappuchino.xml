<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cappuccin"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnAboutCappu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@drawable/otherbuttons"
        android:text="About"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnViewPriceCappuccino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:background="@drawable/otherbuttons"
        android:text="View Price"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnBuyCappu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:background="@drawable/otherbuttons"
        android:text="Send order via email"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnCallAndOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:background="@drawable/otherbuttons"
        android:text="Call and Order"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnSendViaSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:background="@drawable/otherbuttons"
        android:text="Send order via SMS"
        android:typeface="serif" />
    
</LinearLayout>